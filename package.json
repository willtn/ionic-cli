{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap && npm run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "watch": "lerna run watch --parallel",
    "docs": "node ./packages/@ionic/cli-scripts/bin/docs",
    "publish:canary": "lerna publish --canary --exact --npm-tag=canary --skip-git",
    "publish:testing": "lerna publish --canary=testing --exact --npm-tag=testing --skip-git",
    "publish": "lerna publish --exact --conventional-commits",
    "prepush": "npm run lint",
    "local": "npm run build && rm -rf ../groowin-ionic/node_modules/@ionic && rm -rf ../groowin-ionic/node_modules/ionic && cp -r packages/* ../groowin-ionic/node_modules/"
  },
  "devDependencies": {
    "@types/node": "^6.0.92",
    "concurrently": "^3.4.0",
    "eslint-config-ionic": "0.0.2",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "lerna": "^2.5.1",
    "replace": "^0.3.0",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "tslint-ionic-rules": "^0.0.11",
    "typescript": "^2.6.1"
  }
}
